<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/bakgrunn"
    tools:context=".Aktivitet_Mote">

    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:titleTextColor="@android:color/white"
        android:background="@color/toolbar">
    </Toolbar>

    <fragment
        android:id="@+id/listeMote"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        class="com.example.s331153s333975mappe2.Fragment_Mote"
        tools:layout="@layout/liste_mote_layout">
    </fragment>
    <fragment
        android:id="@+id/innholdMote"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        class="com.example.s331153s333975mappe2.Fragment_MoteInnhold"
        tools:layout="@layout/innhold_mote_layout">
    </fragment>

</LinearLayout>